<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %> -
            <small>
              <%= movie.director.first_name %>
              <%= movie.director.last_name %>
            </small>
          </h4>
          <p><%= movie.syllabus %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
